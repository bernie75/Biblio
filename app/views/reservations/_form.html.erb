
<h1>Emprunter ce livre :</h1>


<%= simple_form_for(@reservation) do |f| %>
  <% if @reservation.errors.any? %>
   <div id="error_explanation">
    <ul>
      <%@reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   </div>
  <% end %>

  <div class="form-inputs">
   <%= f.association :user %>
  <%= f.association :book %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
